<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PredictionModelsActivity">

    <!-- Button for Lung Prediction -->
    <Button
        android:id="@+id/btnLungPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lung Prediction"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Button for Heart Prediction -->
    <Button
        android:id="@+id/btnHeartPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Prediction"
        app:layout_constraintTop_toBottomOf="@id/btnLungPrediction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Button for Breast Prediction -->
    <Button
        android:id="@+id/btnBreastPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breast Prediction"
        app:layout_constraintTop_toBottomOf="@id/btnHeartPrediction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
