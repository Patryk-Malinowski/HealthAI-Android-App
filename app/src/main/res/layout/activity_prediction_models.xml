<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PredictionModelsActivity">

    <!-- Button for Lung Prediction -->
    <Button
        android:id="@+id/btnLungPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lung Prediction"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Button for Heart Prediction -->
    <Button
        android:id="@+id/btnHeartPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Heart Prediction"
        app:layout_constraintTop_toBottomOf="@id/btnLungPrediction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Button for Breast Prediction -->
    <Button
        android:id="@+id/btnBreastPrediction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Breast Prediction"
        app:layout_constraintTop_toBottomOf="@id/btnHeartPrediction"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/logoutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        app:backgroundTint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logout_logo"
        app:tint="@color/panel_end" />

    <ImageButton
        android:id="@+id/backBtn"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:backgroundTint="@android:color/transparent"
        android:backgroundTintMode="multiply"
        android:contentDescription="back"
        android:src="@drawable/back_logo_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/homeBtn"
        android:layout_width="53dp"
        android:layout_height="54dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_weight="1"
        android:backgroundTint="@android:color/transparent"
        android:backgroundTintMode="multiply"
        android:contentDescription="home"
        android:src="@drawable/home_logo_purple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
